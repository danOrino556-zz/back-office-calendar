<div class="calendar-day-container">

  <div class="h3">
    {{t "dashboard.numberOfEvents" num= @timeslots.length}}
  </div>

  {{#each (range 0 23 true) as |hour|}}

    <div class="row hour-container">

      <div class="col-auto text-center">
        <div class="calendar-time-title">
          {{concat hour ":00"}}
        </div>
      </div>
      
      <div class="col p-0">

        <div class="hour-block">

          <hr>

          {{#each (array "00" "30") as |thirtyMinuteIncrement|}}

            <div class="thirty-minute-block background-block">

              {{#with
                (filter-by "startTime" (concat hour ":" thirtyMinuteIncrement) @timeslots)
              as |matchingTimeSlots|
              }}

                {{#each matchingTimeSlots as |timeslot|}}

                  <CalendarTimeslot
                    @model={{timeslot}}
                    @timeslots={{@timeslots}}
                    @onClick={{fn @onTimeslotSelected timeslot}}
                  />
                  
                {{/each}}

              {{/with}}

            </div>
            
          {{/each}}
        </div>        
      </div>
    </div>
    
  {{/each}}
</div>

