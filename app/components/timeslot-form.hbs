<form>

  {{#if @model.owners}}

    <div class="form-group">
      <label for="owners">
        {{t "dashboard.timeslot.owners"}}
      </label>

      <div>
        {{#each @model.owners as |ownerId|}}

          <button type="button" class="btn btn-primary">

            <OwnerInfo
              @ownerId={{ownerId}}
              as |owner|
            >
              {{owner.name}}
            </OwnerInfo>
          
          </button>

        {{/each}}
      </div>
    </div>
    
  {{/if}}

  <div class="form-group">
    <label for="activityName">
      {{t "dashboard.timeslot.name"}}
    </label>
    <Input
      id="activityName"
      class="form-control"
      @value={{@model.activityName}}
    />
  </div>

  <div class="form-group">
    <label for="availableSpots">
      {{t "dashboard.timeslot.availableSpots" }}
    </label>
    <Input
      id="availableSpots"
      class="form-control"
      @value={{@model.availableSpots}}
    />
  </div>

  <div class="form-group">
    <label for="bookedCount">
      {{t "dashboard.timeslot.bookedCount" }}
    </label>
    <Input
      id="bookedCount"
      class="form-control"
      @value={{@model.bookedCount}}
    />
  </div>

  <div class="form-group">
    <label for="maxGuests">
      {{t "dashboard.timeslot.maxGuests" }}
    </label>
    <Input
      id="maxGuests"
      class="form-control"
      @value={{@model.maxGuests}}
    />
  </div>

</form>