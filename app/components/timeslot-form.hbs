<form class="content-section">

  <h6>
    {{@model.date}}
  </h6>

  <h6>
    {{@model.startTime}} - {{@model.endTime}}
  </h6>

  <hr>

  <div class="form-group">
    <label for="activityName">
      {{t "dashboard.timeslot.name"}}
    </label>
    <Input
      id="activityName"
      class="form-control"
      @value={{@model.activityName}}
    />
  </div>

  <div class="form-group">
    <label for="availableSpots">
      {{t "dashboard.timeslot.availableSpots" }}
    </label>
    <Input
      id="availableSpots"
      class="form-control"
      @value={{@model.availableSpots}}
    />
  </div>

  <div class="form-group">
    <label for="bookedCount">
      {{t "dashboard.timeslot.bookedCount" }}
    </label>
    <Input
      id="bookedCount"
      class="form-control"
      @value={{@model.bookedCount}}
    />
  </div>

  <div class="form-group">
    <label for="maxGuests">
      {{t "dashboard.timeslot.maxGuests" }}
    </label>
    <Input
      id="maxGuests"
      class="form-control"
      @value={{@model.maxGuests}}
    />
  </div>

</form>