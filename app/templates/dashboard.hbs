  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      {{!--Nav links would go here as the application grows--}}

      {{!-- <li class="nav-item">
        <LinkTo @route="dashboard.day-view" class="">
          {{t "dashboard.dayView"}}
        </LinkTo>
      </li> --}}
    </ul>

    <ul class="navbar-nav text-right">

      {{#each (array "bi-question" "bi-gear" "bi-person") as |icon|}}
        
        <li class="nav-item">
          <button type="button" class="btn btn-link">
            <i class={{icon}}></i>
          </button>
        </li>

      {{/each}}

    </ul>
  </div>
</nav>

