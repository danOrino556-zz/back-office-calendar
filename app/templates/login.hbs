<form>
  <div class="form-group">
    <label for="exampleInputEmail1">
      {{t "login.username"}}
    </label>
    <input
      type="email"
      class="form-control"
      id="exampleInputEmail1"
      aria-describedby="emailHelp"
    >
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">
      {{t "login.password"}}
    </label>
    <input 
      type="password" 
      class="form-control" 
      id="exampleInputPassword1"
    >
  </div>
</form>
<div class="row">
  <div class="col">
    <button
      type="button"
      class="btn btn-primary"
      {{on "click" (fn this.onLogin @model.username @model.password)}}
    >
      {{t "login"}}
    </button>
  </div>
</div>